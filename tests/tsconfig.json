{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"rootDir": "source",
		"noEmit": true,
		"strict": true,
		"noEmitOnError": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": [ "es2018", "esnext.bigint" ],
	},
	"include": [
		"source/**/*.ts",
	],
}
